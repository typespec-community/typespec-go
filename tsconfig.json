{
  "compilerOptions": {
    "lib": ["es2022"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext", 
    "target": "es2022",
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "sourceMap": true,
    "declarationMap": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "dist", "src/**/*.test.ts", "test/**/*", "src/minimal-*", "src/simple-*", "src/working-*", "src/professional-*"]
}